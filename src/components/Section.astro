---
interface Props {
  id?: string;
  eyebrow?: string;
  eyebrowClassName?: string;
  title: string;
  description?: string;
  class?: string;
  titleClassName?: string;
  descriptionClassName?: string;
  style?: string;
}

const {
  id,
  eyebrow,
  eyebrowClassName,
  title,
  description,
  class: className,
  titleClassName,
  descriptionClassName,
  style,
} = Astro.props;

const hasChildren = Astro.slots.has('default');
---

<section id={id} class:list={["relative isolate py-20", className]} style={style}>
  <div class="mx-auto w-full max-w-6xl px-6 md:px-8">
    <div class="max-w-3xl space-y-4">
      {eyebrow && (
        <p class:list={["text-xs font-semibold uppercase tracking-[0.4em] text-brand-blue-500", eyebrowClassName]}>
          {eyebrow}
        </p>
      )}
      <h2 class:list={["text-3xl font-semibold tracking-tight text-ink-900 md:text-4xl", titleClassName]}>
        {title}
      </h2>
      {description && (
        <p class:list={["text-lg leading-relaxed text-ink-600", descriptionClassName]}>
          {description}
        </p>
      )}
    </div>
    {hasChildren && (
      <div class="mt-16 space-y-8">
        <slot />
      </div>
    )}
  </div>
</section>
